# ===============================
# Default to text files with LF
# ===============================
* text=auto eol=lf

# ===============================
# Flutter / Dart
# ===============================
*.dart      text eol=lf
*.yaml      text eol=lf
*.cmake     text eol=lf
*.md        text eol=lf
*.json      text eol=lf
*.xml       text eol=lf
*.gradle    text eol=lf
*.java      text eol=lf
*.kt        text eol=lf
*.properties text eol=lf
*.bat       text eol=crlf  # Windows batch scripts should keep CRLF
*.sh        text eol=lf    # Shell scripts should use LF

# ===============================
# iOS / macOS
# ===============================
*.plist     text eol=lf
*.swift     text eol=lf
*.xcodeproj text eol=lf
*.xcworkspace text eol=lf

# ===============================
# Web files
# ===============================
*.html      text eol=lf
*.css       text eol=lf
*.js        text eol=lf

# ===============================
# Binary files - no line ending changes
# ===============================
*.png       binary
*.jpg       binary
*.jpeg      binary
*.gif       binary
*.ico       binary
*.jar       binary
*.keystore  binary
*.ttf       binary
*.otf       binary
*.pdf       binary
*.mp3       binary
*.mp4       binary
*.avi       binary
*.mov       binary
*.apk       binary
*.aab       binary
*.ipa       binary
